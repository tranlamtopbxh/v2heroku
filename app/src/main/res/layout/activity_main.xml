<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Mapbox MapView -->
    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Navigation View -->
    <com.mapbox.navigation.ui.maps.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Location Status -->
        <TextView
            android:id="@+id/locationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang tìm vị trí..."
            android:textSize="14sp"
            android:textColor="@color/mapbox_gray"
            android:layout_marginBottom="8dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnStartNavigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/navigation_start"
                android:textColor="@color/white"
                android:background="@color/mapbox_blue"
                android:layout_marginEnd="8dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnStopNavigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/navigation_stop"
                android:textColor="@color/white"
                android:background="@color/mapbox_red"
                android:enabled="false" />

        </LinearLayout>

        <!-- Feature Toggles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cbVoiceInstructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giọng nói"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbSpeedLimit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giới hạn tốc độ"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbTripProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiến trình"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Info Panel -->
    <LinearLayout
        android:id="@+id/navigationInfoPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Maneuver Instruction -->
        <TextView
            android:id="@+id/maneuverInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn thao tác"
            android:textSize="16sp"
            android:textColor="@color/mapbox_dark_gray"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Trip Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoảng cách: "
                android:textSize="14sp"
                android:textColor="@color/mapbox_gray" />

            <TextView
                android:id="@+id/tripDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 km"
                android:textSize="14sp"
                android:textColor="@color/mapbox_dark_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian: "
                android:textSize="14sp"
                android:textColor="@color/mapbox_gray" />

            <TextView
                android:id="@+id/tripDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 phút"
                android:textSize="14sp"
                android:textColor="@color/mapbox_dark_gray" />

        </LinearLayout>

        <!-- Speed Limit -->
        <TextView
            android:id="@+id/speedLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/mapbox_red"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>